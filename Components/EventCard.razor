@using EventEaseApp.Models

@if (EventItem == null || string.IsNullOrWhiteSpace(EventItem.Name))
{
    <div class="alert alert-warning">Invalid event data.</div>
}
else
{
    <div class="border rounded p-3 mb-3">
        <h4>@EventItem.Name</h4>
        <div><b>Date:</b> @(EventItem.Date == default ? "Invalid date" : EventItem.Date.ToString("dd MMM yyyy"))</div>
        <div><b>Location:</b> @EventItem.Location</div>

        <NavLink href="@($"/events/{EventItem.Id}")">Details</NavLink> |
        <NavLink href="@($"/events/{EventItem.Id}/register")">Register</NavLink>
    </div>
}

@code {
    [Parameter]
    public Event EventItem { get; set; } = default!;
}
